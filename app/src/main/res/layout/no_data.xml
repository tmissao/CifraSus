<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/llContainerEmpty"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:gravity="center"
  android:orientation="vertical">

  <ImageView
    android:id="@+id/noDataImage"
    android:layout_width="@dimen/image_no_registry_size"
    android:layout_height="@dimen/image_no_registry_size"
    android:scaleType="fitCenter"
    android:tint="@color/dividerColor"
    app:srcCompat="@drawable/ic_sentiment_dissatisfied"/>

  <TextView
    android:id="@+id/noDataText"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/space_big_views"
    android:lineSpacingExtra="3dp"
    android:text="@string/no_data"
    android:textAlignment="center"
    android:textColor="@color/disableTextColor"
    android:textSize="@dimen/fontsize_subhead"
    />

</LinearLayout>